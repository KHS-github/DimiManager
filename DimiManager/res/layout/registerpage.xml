<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FF0099"
              android:gravity="center">
    <EditText
            android:id="@+id/editRID"
            android:hint="아이디"
            android:paddingLeft="4dp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#FFFFFF"
            android:singleLine="true"/>
    <EditText
            android:id="@+id/editRPass"
            android:hint="패스워드"
            android:paddingLeft="4dp"
            android:layout_marginTop="5sp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#FFFFFF"
            android:singleLine="true"
            android:password="true"/>
    <EditText
            android:id="@+id/editPassCheck"
            android:hint="패스워드 확인"
            android:paddingLeft="4dp"
            android:layout_marginTop="5sp"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#FFFFFF"
            android:singleLine="true"
            android:password="true"/>
    <LinearLayout android:layout_marginLeft="33sp" android:layout_width="fill_parent" android:layout_height="40dp"
            android:gravity="left">
        <EditText
                android:id="@+id/editName"
                android:hint="이름"
                android:paddingLeft="4dp"
                android:layout_marginTop="3sp"
                android:layout_width="92dp"
                android:layout_height="35dp"
                android:layout_marginRight="4sp"
                android:background="#FFFFFF"/>
        <EditText
                android:id="@+id/editGroup"
                android:hint="반"
                android:paddingLeft="4dp"
                android:layout_marginTop="3sp"
                android:layout_width="92dp"
                android:layout_height="35dp"
                android:layout_marginRight="4sp"
                android:background="#FFFFFF"
                />
        <EditText
                android:id="@+id/editNum"
                android:hint="번호"
                android:paddingLeft="4dp"
                android:layout_marginTop="3sp"
                android:layout_width="92dp"
                android:layout_height="35dp"
                android:background="#FFFFFF"
                />
    </LinearLayout>
    <Button
            android:id="@+id/btnRegister"
            android:text="회원가입"
            android:background="@drawable/btnbtn"
            android:layout_marginTop="5sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"/>
</LinearLayout>